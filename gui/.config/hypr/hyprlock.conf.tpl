# generated by theme-apply - edit hyprlock.conf.tpl instead
source = ~/.config/hypr/conf/lockscreen.conf

general {
    immediate_render = true
    no_fade_in = true
    no_fade_out = true
    hide_cursor = false
    grace = 0
    disable_loading_bar = true
    ignore_empty_input = true
    fractional_scaling = auto
}

input-field {
    monitor = eDP-1
    size = 320, 50
    outline_thickness = 2
    dots_size = 0.3
    dots_spacing = 0.4
    dots_center = true
    dots_rounding = -1
    outer_color = rgba(${ACCENT_R}, ${ACCENT_G}, ${ACCENT_B}, 0.6)
    inner_color = rgba(20, 20, 20, 0.8)
    font_color = rgba(${FG_R}, ${FG_G}, ${FG_B}, 0.9)
    fade_on_empty = false
    placeholder_text =
    hide_input = false
    check_color = rgba(${ACTIVE_R}, ${ACTIVE_G}, ${ACTIVE_B}, 0.8)
    fail_color = rgba(${URGENT_R}, ${URGENT_G}, ${URGENT_B}, 0.9)
    fail_text = $FAIL <b>($ATTEMPTS)</b>
    fail_transition = 300
    capslock_color = rgba(${ACCENT_R}, ${ACCENT_G}, ${ACCENT_B}, 1)
    numlock_color = -1
    bothlock_color = -1
    invert_numlock = false
    swap_font_color = false
    position = 0, -440
    halign = center
    valign = center
    rounding = 10
}

label {
  monitor = eDP-1
  text = cmd[update:1000] echo "$(~/bin/media)"
  color = rgba(${FG_R}, ${FG_G}, ${FG_B}, 0.85)
  font_size = 28
  font_family = MesloLGS Nerd Font Mono
  position = 30, -20
  halign = left
  valign = top
}

label {
  monitor = eDP-1
  text = cmd[update:1000] echo "$(~/bin/battery-status)"
  color = rgba(${FG_R}, ${FG_G}, ${FG_B}, 0.85)
  font_size = 32
  font_family = MesloLGS Nerd Font Mono
  position = -30, -20
  halign = right
  valign = top
}

label {
  monitor = eDP-1
  text = cmd[update:1000] echo "$(date +"%A, %B %d")"
  color = rgba(${FG_R}, ${FG_G}, ${FG_B}, 0.9)
  font_size = 26
